version: "3"

services:
  wg-easy:
    image: ghcr.io/wg-easy/wg-easy:12
    container_name: wg-easy
    restart: unless-stopped
    environment:
      WG_HOST: "{{ wireguard.domain }}"
      PASSWORD: "{{ wireguard.password }}"
      WG_DEFAULT_DNS: "{{ gatewayIp }}, 9.9.9.9"
      WG_DEFAULT_ADDRESS: "{{ wireguard.ipRange }}"
      WG_ALLOWED_IPS: "{{ wireguard.allowedIps }}"
      WG_POST_UP: ""
      WG_POST_DOWN: ""
    volumes:
      - ./.wg-easy:/etc/wireguard
    ports:
      - 51820:51820/udp
      - 51821:51821/tcp
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
    sysctls:
      - net.ipv4.ip_forward=1
      - net.ipv4.conf.all.src_valid_mark=1
    networks:
      - homelab

networks:
  homelab:
    driver: bridge

