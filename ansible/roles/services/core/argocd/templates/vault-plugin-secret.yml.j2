apiVersion: v1
kind: Secret
type: Opaque
metadata:
  name: vault-plugin-secret
  namespace: {{ argocd.namespace }}
data:
  VAULT_ADDR: {{ ('https://' + vault.domain) | b64encode }}
  VAULT_TOKEN: {{ vault_token | b64encode  }}
  AVP_TYPE: {{ 'vault' | b64encode }}
  AVP_AUTH_TYPE: {{ 'token' | b64encode }}
