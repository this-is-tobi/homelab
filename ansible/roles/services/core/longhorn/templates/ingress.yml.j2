apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: longhorn
  namespace: "{{ longhorn.namespace }}"
spec:
  ingressClass: traefik
  rules:
    - host: {{ longhorn.domain }}
      http:
        paths:
          - path: "/"
            pathType: Prefix
            backend:
              service:
                name: longhorn-frontend
                port:
                  number: 80
