apiVersion: v1
kind: Secret
metadata:
  name: longhorn-admin
  namespace: "{{ longhorn.namespace }}"
type: kubernetes.io/basic-auth
data:
  username: "{{ 'admin' | b64encode }}"
  password: "{{ lookup('ansible.builtin.password', '/dev/null', length=24, chars=['ascii_letters', 'digits']) | b64encode }}"

---
apiVersion: traefik.containo.us/v1alpha1
kind: Middleware
metadata:
  name: auth-middleware
  namespace: "{{ longhorn.namespace }}"
spec:
  basicAuth:
    secret: longhorn-admin

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: longhorn
  namespace: "{{ longhorn.namespace }}"
  annotations:
    cert-manager.io/cluster-issuer: letsencrypt-prod
    traefik.ingress.kubernetes.io/router.middlewares: kube-system-redirect-middleware@kubernetescrd,longhorn-system-auth-middleware@kubernetescrd
spec:
  ingressClass: traefik
  rules:
  - host: {{ longhorn.domain }}
    http:
      paths:
      - path: "/"
        pathType: Prefix
        backend:
          service:
            name: longhorn-frontend
            port:
              number: 80
  tls:
  - hosts:
    - {{ longhorn.domain }}
    secretName: {{ longhorn.domain }}
