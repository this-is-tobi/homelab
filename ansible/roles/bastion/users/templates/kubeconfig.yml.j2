apiVersion: v1
clusters:
- cluster:
    certificate-authority-data: {{ k3sCaData }}
    server: https://192.168.0.99:6443
  name: ohmlab
contexts:
- context:
    cluster: ohmlab
    user: {{ item.username }}
    namespace: {{ item.username }}
  name: default
current-context: default
kind: Config
preferences: {}
users:
- name: {{ item.username }}
  user:
    client-certificate-data: {{ lookup('file', '{{ bastionLocalDir }}/{{ item.username }}/kubernetes/{{ item.username }}.crt') | b64encode }}
    client-key-data: {{ lookup('file', '{{ bastionLocalDir }}/{{ item.username }}/kubernetes/{{ item.username }}.key') | b64encode }}