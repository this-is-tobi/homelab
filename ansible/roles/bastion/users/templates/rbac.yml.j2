apiVersion: v1
kind: Namespace
metadata:
  name: {{ item.username }}

kind: Role
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: {{ item.username }}
  namespace: {{ item.username }}
rules:
- apiGroups: ["", "apps", "networking.k8s.io", "autoscaling", "batch"]
  resources: ["*"]
  verbs: ["get", "watch", "list", "update", "patch", "create", "delete"]

kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: {{ item.username }}
  namespace: {{ item.username }}
subjects:
- kind: User
  name: {{ item.username }}
  apiGroup: rbac.authorization.k8s.io
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: {{ item.username }}