version: "3"

services:
  pihole:
    container_name: pihole
    image: docker.io/pihole/pihole:2024.01.0
    ports:
      - 53:53/tcp
      - 53:53/udp
      - 5353:80/tcp
      # - 67:67/udp # Only required if you are using Pi-hole as your DHCP server
    environment:
      TZ: 'Europe/Paris'
      WEBPASSWORD: {{ pihole.password }}
      DNSMASQ_LISTENING: all
      FTLCONF_LOCAL_IPV4: {{ gatewayIp }}
      PIHOLE_DNS_: 9.9.9.9;9.9.9.10
      DNSSEC: true
      DNS_BOGUS_PRIV: true
      DNS_FQDN_REQUIRED: true
      REV_SERVER: true
      REV_SERVER_DOMAIN: {{ localRootDomain }}
      REV_SERVER_TARGET: 192.168.0.1
      REV_SERVER_CIDR: 192.168.0.0/24
      DHCP_ACTIVE: false
      # DHCP_START: 192.168.0.10
      # DHCP_END: 192.168.0.255
      # DHCP_ROUTER: 109.8.184.1
      WEBUIBOXEDLAYOUT: boxed
      WEBTHEME: default-dark
    volumes:
      - './.pihole/etc-pihole:/etc/pihole'
      - './.pihole/etc-dnsmasq.d:/etc/dnsmasq.d'
    # cap_add:
    #   - NET_ADMIN # Required if you are using Pi-hole as your DHCP server, else not needed
    restart: unless-stopped
    networks:
      - homelab

networks:
  homelab:
    driver: bridge
