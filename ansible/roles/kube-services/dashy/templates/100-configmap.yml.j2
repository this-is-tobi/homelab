---
apiVersion: v1
kind: ConfigMap
metadata:
  name: dashy-config
  namespace: {{ dashy.namespace }}
data:
  conf.yml: |
    pageInfo:
      title: Homelab
      navLinks:
        - title: GitHub
          path: https://github.com/this-is-tobi/homelab
        - title: Documentation
          path: https://{{ dashy.docsDomain }}
    appConfig:
      theme: adventure-basic
      startingView: default
      statusCheck: true
      statusCheckInterval: 300
      webSearch:
        disableWebSearch: true
      disableConfiguration: true
      hideComponents:
        hideNav: true
        hideSearch: true
        hideSettings: true
        hideFooter: true
    sections:
      - name: Services
        icon: fas fa-rocket
        items:
          - title: Argocd
            description: Deploy apps using gitops
            url: https://{{ argocd.domain }}
            icon: hl-argocd
          - title: Grafana
            description: Watch cluster metrics & application logs
            url: https://{{ grafana.domain }}
            icon: hl-grafana
          - title: Harbor
            description: Container image registry & Helm chart registry
            url: https://{{ harbor.domain }}
            icon: hl-harbor
          - title: Keycloak
            description: Single Sign On managment 
            url: https://{{ keycloak.domain }}
            icon: hl-keycloak
          - title: Kubernetes 
            description: Kubernetes dashboard to watch cluster ressources
            url: https://{{ kubeDashboard.domain }}
            icon: hl-kubernetes-dashboard
          - title: Minio
            description: Store data with s3 standard
            url: https://{{ minio.domain }}
            icon: hl-minio
          - title: Vault
            description: Store & retrieve secrets safely
            url: https://{{ vault.domain }}
            icon: hl-vault
        displayData:
          sortBy: alphabetical
          collapsed: false
          rows: 5
          cols: 2
          itemSize: large
      - name: Utils
        icon: fas fa-wrench
        items:
          - title: Documentation
            description: As the saying goes RTFM
            url: https://{{ dashy.docsDomain }}
            icon: fal fa-book
            statusCheck: false
          - title: Github
            description: Code sources
            url: https://github.com/this-is-tobi/homelab
            icon: fab fa-github
            statusCheck: false
        displayData:
          sortBy: alphabetical
          collapsed: false
          rows: 5
          cols: 1
          itemSize: large
